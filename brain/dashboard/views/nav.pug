      li.nav-item(class=(nav_link === "nav-skills" ? "active" : null))
        a.nav-link(href="/dashboard/skills") Skills
      li.nav-item(class=(nav_link === "nav-connectors" ? "active" : null))
        a.nav-link(href="/dashboard/connectors") Connectors
